{
    "name": "Intra",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["https://intra.epitech.eu/*"],
            "js": ["script.js"],
            "css": ["style.css"]
        }
    ],
    "action": {
        "default_icon": "/icons/Icon-128.png",
        "default_popup": "popup.html"
    },
    "icons" : {
        "16" : "/icons/Icon-16.png",
        "32" : "/icons/Icon-32.png",
        "48" : "/icons/Icon-48.png",
        "128" : "/icons/Icon-128.png"
    }
}